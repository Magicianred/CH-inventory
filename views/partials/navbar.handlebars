<div class="navbar-container">
    <div class="top-bar">
        <div class="top-bar-left">
            <ul class="dropdown menu" data-dropdown-menu>
                <li class="menu-text">RawMats</li>
                <li class="menu-text" onclick="window.location.href = '/';">Home</li>
            </ul>
        </div>
        <div class="top-bar-right">
            <ul class="dropdown menu" data-dropdown-menu>
                <li><a href="#" data-open="loginModal">Log In</a></li>
                    <div class="reveal" id="loginModal" data-reveal>
                        <form action="/login" method="post" class="log-in-form">
                            <h4 class="text-center">Log in with your email account</h4>
                            <label>Email
                                <input type="text" name="loginUsername" placeholder="somebody@example.com">
                            </label>
                            <label>Password
                                <input type="current-password" name="loginPassword" placeholder="Password">
                            </label>
                            <input id="login-show-password" type="checkbox"><label for="show-password">Show password</label>
                            <p><input type="submit" class="button expanded" id="loginEnter" value="Log in"></input></p>
                            <p class="text-center"><a href="#">Forgot your password?</a></p>
                        </form>
                    </div>
                <li><a href="#" data-open="registerModal">Register</a></li>
                    <div class="reveal" id="registerModal" data-reveal>
                        <form action="/register" method="post" class="sign-up">
                            <h4 class="text-center">Register</h4>
                            <label>Name
                                <input type="text" name="registerUsername" placeholder="John Smith">
                            </label>
                            <label>Email
                                <input type="text" name="registerEmail" placeholder="somebody@example.com">
                            </label>
                            <label>Password
                                <input type="current-password" name="registerPassword" placeholder="Password">
                            </label>
                            <input id="register-show-password" type="checkbox"><label for="show-password">Show password</label>
                            <p><input type="submit" class="button expanded" id="registerEnter" value="Register"></input></p>
                            <p class="text-center"><a href="#">Forgot your password?</a></p>
                        </form>
                    </div>

            </ul>

        </div>
    </div>
</div>