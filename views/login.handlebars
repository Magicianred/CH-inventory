<form action="/login" method="post" class="log-in-form">
    <h4 class="text-center">Log in with your email account</h4>
    <label>Email
        <input type="text" name="email" placeholder="somebody@example.com">
    </label>
    <label>Password
        <input type="password" name="password" placeholder="Password">
    </label>
    <input id="login-show-password" type="checkbox"><label for="show-password">Show password</label>
    <p><input type="submit" class="button expanded" id="loginEnter" value="Log in"></input></p>
    <p class="text-center"><a href="#">Forgot your password?</a></p>
</form>