{{>navbar}}

<ul class="accordion" data-accordion>

  <li class="accordion-item" data-accordion-item>
    <!-- Accordion tab title -->
    <a href="#" class="accordion-title">Reichenbach Bar</a>
    <!-- Accordion tab content: it would start in the open state due to using the `is-active` state class. -->
    <div class="accordion-content" data-tab-content>
      <div class="cell-data-container">
          <div class="grid-x align-center">
              <div class="button cell-small-12" data-open="reichBarEntryForm">
                  ADD NEW
              </div>
              <div class="reveal" id="reichBarEntryForm" data-reveal>
                <form class="newRBar" action="/saveNewRBar" method="post">
                    <label for="">NEW REICHENBACH BAR</label>
                    Color Code:
                    <input name="colorCode" type="text" id="colorCode">
                    Weight In:
                    <input name="weightIn" type="text" id="weightIn">
                    <p><input type="submit" class="button expanded" id="submit" value="Save" data-close></input></p>
                </form>
              </div>
          </div>
          <div class="grid-x align-center">
              <div class="cell medium-4">
                  Color Code
              </div>
              <div class="cell medium-4">
                  Current Weight
              </div>
              <div class="cell medium-4">
                  <div class="button">
                      Add
                  </div>
                  <div class="button">
                      Remove
                  </div>
              </div>
          </div>
          <div class="grid-x align-center">
              <div class="cell small-12">
                  THIS IS WHERE THE DATA HANDLEBARS WILL GO
              </div>
          </div>
      </div>
    </div>
  </li>

</ul>