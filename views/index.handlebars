<form class="log-in-form">
    <h4 class="text-center">Log in with your email account</h4>
    <label>Email
        <input type="text" name="username" placeholder="somebody@example.com">
    </label>
    <label>Password
        <input type="current-password" name="password" placeholder="Password">
    </label>
    <input id="show-password" type="checkbox"><label for="show-password">Show password</label>
    <p><input type="submit" class="button expanded" id="enter" href="/enter" value="Log in"></input></p>
    <p class="text-center"><a href="#">Forgot your password?</a></p>
</form>

<hr>

<form action="/register" method="post" class="sign-up">
    <h4 class="text-center">Register</h4>
    <label>Name
        <input type="text" name="username" placeholder="John Smith">
    </label>
    <label>Email
        <input type="text" name="email" placeholder="somebody@example.com">
    </label>
    <label>Password
        <input type="current-password" name="currentPassword" placeholder="Password">
    </label>
    <input id="show-password" type="checkbox"><label for="show-password">Show password</label>
    <p><input type="submit" class="button expanded" id="enter" value="Register"></input></p>
    <p class="text-center"><a href="#">Forgot your password?</a></p>
</form>
