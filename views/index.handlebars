{{>navbar}}

<ul class="accordion" data-accordion>

{{!-- REICHENBACH BAR ACCORDION --}}
{{!-- beginning of accordion item --}}
  <li class="accordion-item" data-accordion-item>
    {{!-- tab title, this is what shows when closed --}}
    <a href="#" class="accordion-title">
        <div class="button cell-small-12" onclick="window.location.href = '/reichenbachBar';">
            REICHENBACH BAR
        </div>
        <div class="button cell-small-12" data-open="reichBarEntryForm">
            ADD NEW
        </div>
        <div class="button cell-small-12" onclick="closeTab()">
            Close
        </div>
    </a>
    {{!-- tab data, this is closed on page open, revealed by clicking on the tab --}}
    <div class="accordion-content" data-tab-content>
      <div class="cell-data-container">
          {{!-- beginning of grid for new color entry modal --}}
          <div class="grid-x align-center">
              <div class="reveal" id="reichBarEntryForm" data-reveal>
                <form class="newRBar" action="/saveNewRBar" method="post">
                    <label for="">NEW REICHENBACH BAR</label>
                    Color Code:
                    <input name="colorCode" type="text" id="colorCode">
                    Weight In:
                    <input name="weightIn" type="text" id="weightIn">
                    <p><input type="submit" class="button expanded" id="newRBar" value="Save" data-close></input></p>
                </form>
              </div>
          </div>
          {{!-- end grid --}}
          {{!-- beginning of grid for handlebars data --}}
          <div class="grid-x align-center">
              <div class="cell small-12" id="reichenbachBarDataHolder">
                      <ul>
                        {{#each color}}
                            {{>colorListItem}}
                        {{/each}}
                      </ul>
              </div>
          </div>
          {{!-- end of grid for handlebars data --}}
      </div>
    </div>
    {{!-- end of data container --}}
  </li>
{{!-- end of accordion item --}}

